

{
  "compilerOptions": {
    "target": "ES2023",
    "module": "CommonJS",            /* Changed from ESNext to CommonJS */
    "moduleResolution": "Node",      /* Changed from bundler to Node */
    "outDir": "./dist",              /* Tell TS where to put the files */
    "noEmit": false,                 /* MUST be false so files are created */
    "esModuleInterop": true,         /* Crucial for importing express/mongo */
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"]
  },
  "include": [
    "server.ts",                     /* Include your server file */
    "src/**/*.ts"                    /* Include all your source files */
  ]
}